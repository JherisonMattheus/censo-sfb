generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum Role {
  ADMIN
  AGENTE
}

model Usuario {
  id                  Int     @id @default(autoincrement())
  name                String
  CPF                 String  @unique
  email               String 
  password            String
  role                Role    @default(AGENTE)

  registradoPorId     Int?
  registradoPor       Usuario? @relation("AdminAgentes", fields: [registradoPorId], references: [id])

  nomeDoRegistrador   String?

  agentesResgistrados Usuario[] @relation("AdminAgentes")

  moradias            Moradia[]
  pessoas             Pessoa[]
}

model Moradia {
  id                  Int @id @default(autoincrement())
  num                 String
  endereco            String
  bairro              String
  cidade              String
  estado              String
  CEP                 String

  coletadoPorId       Int?
  coletadoPor         Usuario? @relation(fields: [coletadoPorId], references: [id])

  nomeDoColetador     String
  pessoas             Pessoa[]
}

model Pessoa {
  id                  Int    @id @default(autoincrement())
  name                String
  CPF                 String @unique
  email               String
  idade               Int

  moradiaId           Int
  moradia             Moradia? @relation(fields: [moradiaId], references: [id])

  coletadoPorId       Int?
  coletadoPor         Usuario? @relation(fields: [coletadoPorId], references: [id], onDelete: SetNull)
  
  nomeDoColetador     String

  criadoEm            DateTime @default(now())
  atualizadoEm        DateTime @updatedAt
}
